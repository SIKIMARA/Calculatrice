<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tvsec"
        android:layout_width="match_parent"
        android:layout_height="0dp"



        android:textSize="30sp"

        android:padding="10dp"

        android:maxLines="1"
        android:layout_weight="1">

    </TextView>
    <TextView
        android:id="@+id/tvmain"
        android:layout_width="match_parent"
        android:layout_height="0dp"



        android:textSize="50sp"

        android:padding="10dp"

        android:maxLines="1"
        android:layout_weight="2">

    </TextView>
    <LinearLayout
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="5sp"
                        android:id="@+id/bac"
                        android:backgroundTint="#FF9800"
                        android:text="AC" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="5sp"
                        android:id="@+id/bc"
                        android:backgroundTint="#F44336"
                        android:text="C" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="5sp"

                        android:id="@+id/bb1"
                        android:backgroundTint="#F44336"
                        android:text="(" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="5sp"

                        android:id="@+id/bb2"
                        android:backgroundTint="#F44336"
                        android:text=")" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/bsin"
                        android:backgroundTint="#4CAF50"
                        android:text="sin" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/bcos"
                        android:backgroundTint="#4CAF50"
                        android:text="cos" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/btan"
                        android:backgroundTint="#4CAF50"
                        android:text="tan" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/blog"
                        android:backgroundTint="#4CAF50"
                        android:text="log" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/bln"
                        android:backgroundTint="#4CAF50"
                        android:text="ln" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/bfact"
                        android:backgroundTint="#4CAF50"
                        android:text="x!" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/bsquare"
                        android:backgroundTint="#4CAF50"
                        android:text="x²" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/bsqrt"
                        android:backgroundTint="#4CAF50"
                        android:text="√" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/binv"
                        android:backgroundTint="#4CAF50"
                        android:text="1/x" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/bdiv"
                        android:backgroundTint="#4CAF50"
                        android:text="/" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/b7"
                        android:backgroundTint="#FF5722"
                        android:text="7" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/b8"
                        android:backgroundTint="#FF5722"
                        android:text="8" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/b9"
                        android:backgroundTint="#FF5722"
                        android:text="9" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/bmul"
                        android:backgroundTint="#F44336"
                        android:text="*" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/b4"
                        android:backgroundTint="#FF5722"
                        android:text="4" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/b5"
                        android:backgroundTint="#FF5722"
                        android:text="5" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/b6"
                        android:backgroundTint="#FF5722"
                        android:text="6" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/bmin"
                        android:backgroundTint="#F44336"
                        android:text="-" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/b1"
                        android:backgroundTint="#FF5722"
                        android:text="1" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/b2"
                        android:backgroundTint="#FF5722"
                        android:text="2" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/b3"
                        android:backgroundTint="#FF5722"
                        android:text="3" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/bplus"
                        android:backgroundTint="#F44336"
                        android:text="+" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/bpi"
                        android:backgroundTint="#FF5722"
                        android:text="π" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/b0"
                        android:backgroundTint="#FF5722"
                        android:text="0" />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/bdot"
                        android:backgroundTint="#FF5722"
                        android:text="." />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_margin="2sp"
                        android:textAllCaps="false"
                        android:id="@+id/bequal"
                        android:backgroundTint="#009688"
                        android:text="=" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>